{
  "name": "slack filter extension",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "This extension provide a dropdown box in pinned item area. And filtering pinned item by extensions.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://*.slack.com/*"],
      "js": [
        "js/jquery.min.js",
        "js/semantic.min.js",
        "js/add_filter.js"
      ],
      "css": [
        "css/semantic.min.css"
      ]
    }
  ]
}
